{
  "name": "create",
  "private": true,
  "repository": "https://github.com/prichodko/create",
  "author": "Pavel Prichodko",
  "devDependencies": {
    "husky": "^0.14.3",
    "lerna": "^3.3.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
